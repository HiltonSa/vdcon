unit vdcon.controller.botaoexcluir;

{$mode objfpc}{$H+}

interface

uses
  Classes, Sysutils, Controls, vdcon.controller.interfaces;

type

  { TControllerBotaoExcluir }

  TControllerBotaoExcluir = class(TInterfacedObject, iControllerBotaoAcao)
    private
    public
      constructor Create;
      destructor Destroy; override;
      class function New: iControllerBotaoAcao;
      function Show: TObject;
      procedure Clique(Sender: TObject);

  end;

implementation

uses vdcon.controller.botaopadrao.factory;

{ TControllerBotaoExcluir }

constructor TcontrollerbotaoExcluir.Create;
begin

end;

destructor TcontrollerbotaoExcluir.Destroy;
begin
  inherited Destroy;
end;

class function TcontrollerbotaoExcluir.New: iControllerBotaoAcao;
begin
  Result := Self.Create;
end;

function TcontrollerbotaoExcluir.Show: Tobject;
begin
  Result := TControllerBotaoPadraoFactory.New
               .Padrao
               .Name('btnExcluir')
               .onClick(@Clique)
               .Caption('Excluir')
               .Imagem('trash')
               .Item;
end;

