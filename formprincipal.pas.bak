  stBar.Panels[2].Text := FormatDateTime('dddd, dd "de" mmmm "de" yyyy', Date);
  stBar.Panels[5].Text:=DMPrincipal.ImpNom;
  stBar.Panels[6].Text := DMPrincipal.UsuFil;
